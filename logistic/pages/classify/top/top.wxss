.title{
  padding: 50rpx;
  text-align: center;
  color: whitesmoke;
  font-size: 35rpx;
  background-color: #353535;
}
.brand{
  font-size: 11pt;
  flex: 1 1 100%;
  padding: 36rpx 48rpx;
  position: relative;
}

.brand::after {
  content: '';
  position: absolute;
  background-color: #eee;
  width: 85%;
  height: 1px;
  left: 7.5%;
  bottom: 0;
}