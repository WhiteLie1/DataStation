<!-- 评论总纲 -->
<view>
  <!-- 评论人信息 -->
  <view class="user_info">
    <image class="user_img" src="{{user.img}}" style="width:65rpx;height:65rpx;border-radius:50%"></image>
    <view class="user_name_time">
      <text style="font-size:27rpx;color:#AEAEAE">{{user.name}}</text>
      <text style="font-size:17rpx;color:#AEAEAE">{{user.time}}</text>
    </view>
    <image class="icon" src="/icons/dianzan.png" style="width:40rpx;height:40rpx;margin-left:500rpx;margin-top:10rpx"></image>
  </view>

  <!-- 评论主体 -->
  <view class="body">{{list}}</view>
  <!-- 评论分割线 -->
  <view class="bottom"></view>
</view>



<!-- 发表评论 -->
<view class="post">
<input bindinput="toMsg" confirm-type="done" class="input" style="width:560rpx" placeholder="千头万绪，落笔汇成评论一句"></input>
<button bindtap="handleSubmit" style="width:172rpx"><text class="post_word">发送</text></button>
</view>
