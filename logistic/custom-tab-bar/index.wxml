<van-tabbar active="{{ active }}" active-color='rgba(0,0,0,.78)' inactive-color='rgba(0,0,0,.38)' bind:change="onChange">
  <van-tabbar-item wx:for="{{ list }}" wx:key="index">
      <image slot='icon' src='{{ item.icon.normal }}' mode="aspectFit" class="tabbar__icon"></image>
      <image slot='icon-active' src="{{ item.icon.active }}" mode="aspectFit" class="tabbar__icon"></image>
      {{ item.text }}
  </van-tabbar-item>
</van-tabbar>
